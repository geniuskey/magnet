# LLM 설정
# LLM_PROVIDER: anthropic, openai, gemini 중 선택
LLM_PROVIDER=anthropic
LLM_API_KEY=sk-xxx

# OpenAI compatible API URL (optional - OpenAI 호환 API 사용 시)
# LLM_API_URL=https://api.openai.com/v1

# 모델명 (provider에 따라 자동 설정되지만 직접 지정 가능)
# Anthropic: claude-sonnet-4-20250514, claude-3-5-sonnet-20241022
# OpenAI: gpt-4o, gpt-4-turbo, gpt-3.5-turbo
# Gemini: gemini-1.5-pro, gemini-1.5-flash
LLM_MODEL=claude-sonnet-4-20250514

# 사내 API
ORG_API_URL=https://intranet.company.com/api/org
CALENDAR_API_URL=https://intranet.company.com/api/calendar
ROOM_API_URL=https://intranet.company.com/api/rooms
API_AUTH_TOKEN=xxx

# 서버 설정
REDIS_URL=redis://localhost:6379
LOG_LEVEL=INFO

# Mock API 사용 여부 (true: Mock 데이터 사용, false: 실제 API 사용)
USE_MOCK_API=true

# CORS 설정 (개발용)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# 인증 설정
AUTH_BYPASS=true
SSO_URL=https://sso.company.com
