# LLM 설정
# LLM_PROVIDER: anthropic, openai, gemini 중 선택
LLM_PROVIDER=gemini

# 각 provider별 API 키 (사용하는 provider만 설정하면 됨)
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx
GEMINI_API_KEY=AIzaSyXXX

# 각 provider별 모델명
ANTHROPIC_MODEL=claude-sonnet-4-20250514
OPENAI_MODEL=gpt-5-mini
GEMINI_MODEL=gemini-3-flash-preview

# OpenAI compatible API URL (optional - OpenAI 호환 API 사용 시)
# OPENAI_API_URL=https://api.openai.com/v1

# 사내 API
ORG_API_URL=https://intranet.company.com/api/org
CALENDAR_API_URL=https://intranet.company.com/api/calendar
ROOM_API_URL=https://intranet.company.com/api/rooms
API_AUTH_TOKEN=xxx

# 서버 설정
REDIS_URL=redis://localhost:6379
LOG_LEVEL=INFO

# Mock API 사용 여부 (true: Mock 데이터 사용, false: 실제 API 사용)
USE_MOCK_API=true

# CORS 설정 (개발용)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# 인증 설정
AUTH_BYPASS=true
SSO_URL=https://sso.company.com
